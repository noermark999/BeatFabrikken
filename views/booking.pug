include includes/head
include includes/header

h1(class="text-center mb-4") Booking
div(class="container mt-4")
  div(class="row")
    div(class="col")
      div(class="mx-auto")
        table(class="table table-bordered")
          thead
            tr
              th
              th Mandag
              th Tirsdag
              th Onsdag
              th Torsdag
              th Fredag
              th Lørdag
              th Søndag
          tbody(class="text-center")
            tr
              td 08:00
            tr
              td 09:00
            tr
              td 10:00
            tr
              td 11:00
            tr
              td 12:00
            tr
              td 13:00
            tr
              td 14:00
            tr
              td 15:00
            tr
              td 16:00
            tr
              td 17:00
            tr 
              td 18:00
            tr
              td 19:00
            tr
              td 20:00
            tr
              td 21:00
            tr
              td 22:00
    div(class="col")
      div(class="mx-auto")
        input(type="date")
      br
      div(class="ms-auto mx-auto w-340px")
        div(class="form-floating")
          select(class="form-select" id="floatingSelect" aria-label="Floating label select example")
            each lokale in lokaler
              option(selected) #{lokale.docID}
          label(for="floatingSelect") Vælg lokale
      br
      div(class="ms-auto mx-auto w-340px")
        div(class="form-floating")
          select(class="form-select" id="floatingSelect" aria-label="Floating label select example")
              option(selected value="0") 08:00
              option(value="1") 09:00
              option(value="2") 10:00
              option(value="3") 11:00
              option(value="4") 12:00
              option(value="5") 13:00
              option(value="6") 14:00
              option(value="7") 15:00
              option(value="8") 16:00
              option(value="9") 17:00
              option(value="10") 18:00
              option(value="11") 19:00
              option(value="12") 20:00
              option(value="13") 21:00
              option(value="14") 22:00
          label(for="floatingSelect") Vælg tid
          br
        button(type="submit" class="btn btn-primary w-100 py-2") Book 
